


<!DOCTYPE HTML>

<html>
  <head>
  	<meta charset="UTF-8">
  	<title>Bookers</title>
  </head>

  <body>
  	<h1>Books</h1>
    <table>
      <thead>
      	<tr>
      		<th class="table-header">Title</th>
      		<th class="table-header">Body</th>
      		<th class="table-header"></th>
      	</tr>
      </thead>
        <% @books.each do |book| %>
        <tr>
            <td class="title-box">
            <%= book.title %>
            </td>
            <td class="title-box">
            <%= book.body %>
            </td>
            <td>
            <%= link_to "Show", book_path(book.id) %>
            <%= link_to "Edit", edit_book_path(book.id) %>
            <%= link_to "Destroy","/books/#{book.id}" , method: :delete, "data-confirm" => "Are you sure?" %>
            </td>
        </tr>
        <% end %>

      <tbody>


      </tbody>
    </table>

    <h2>New book</h2>

     <%= form_for @book do |book| %>

    <% if @book.errors.any? %>
    <div class="error-box">
    <h2 class="error-text"><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    </div>

    <div class="error-save">
    <label>Title</label>
    <%= book.text_field :title %>
    </div>

    <div class="error-save">
    <label>Body</label>
    <%= book.text_area :body %>
    </div>

    <div class="title-save">
    <%= book.submit"Create Book" %>
    </div>
    <% end %>
  </body>
</html>