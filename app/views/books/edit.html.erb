
<body>

<h1>Editing Book</h1>

<%= form_for(@book) do |book| %>


    <% if @book.errors.any? %>
    	<div class="error-box">
    		<h2 class="error-text"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    		<ul>
      			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
        		<% end %>
        	</ul>
        </div>
    <% end %>


    <div class="title-save">
    <label>Title</label>
    <%= book.text_field :title %>
    </div>
    <div class="title-save">
    <label>Body</label>
    <%= book.text_area :body %>
    </div>
    <div class="title-save">
    <%= book.submit 'Update Book' %>
    </div>

<% end %>

<%= link_to "Show", book_path(@book) %> | <%= link_to"Back", books_path %>

</body>
